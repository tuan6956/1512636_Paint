<?xml version='1.0' encoding='utf-8'?>
<Application xmlns='http://schemas.microsoft.com/windows/2009/Ribbon'>
  <Application.Commands>
    
    <Command Name="cmdButtonNew"

             Symbol="ID_CMD_NEW"

             LabelTitle="New"

             LabelDescription="New Description"

             TooltipTitle="New (Ctrl+N)"

             TooltipDescription="Create a new image.">
      <Command.LargeImages>
        <Image>Images/New.bmp</Image>
      </Command.LargeImages>
    </Command>
    
    <Command Name="cmdButtonOpenBinary"

             Symbol="ID_CMD_OPEN_BINARY"

             LabelTitle="Open binary file"

             LabelDescription="Open binary file"

             TooltipTitle="Open (Ctrl+O)"

             TooltipDescription="Open an existing image.">
      <Command.LargeImages>
        <Image>Images/Open.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdButtonOpenBitmap"

             Symbol="ID_CMD_OPEN_BITMAP"

             LabelTitle="Open bitmap file"

             LabelDescription="Open bitmap file"

             TooltipTitle="Open (Ctrl+O)"

             TooltipDescription="Open an existing image.">
      <Command.LargeImages>
        <Image>Images/Open.bmp</Image>
      </Command.LargeImages>
    </Command>

    <Command Name="cmdButtonSaveBinary"

             Symbol="ID_CMD_SAVE_BINARY"

             LabelTitle="Save binary file"

             LabelDescription="Save binary file"

             TooltipTitle="Save (Ctrl+S)"

             TooltipDescription="Save the current image.">
      <Command.LargeImages>
        <Image>Images/Save.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdButtonSaveBitmap"

             Symbol="ID_CMD_SAVE_BITMAP"

             LabelTitle="Save bitmap file"

             LabelDescription="Save bitmap file"

             TooltipTitle="Save (Ctrl+S)"

             TooltipDescription="Save the current image.">
      <Command.LargeImages>
        <Image>Images/Save.bmp</Image>
      </Command.LargeImages>
    </Command>

    <Command Name="cmdButtonExit"

             Symbol="ID_CMD_EXIT"

             LabelTitle="Exit"

             LabelDescription="Exit Description"

             TooltipTitle="Exit (Ctrl+X)"

             TooltipDescription="Exit application.">
      <Command.LargeImages>
        <Image>Images/Close.bmp</Image>
      </Command.LargeImages>
    </Command>

    <Command Name="cmdButtonDrawLine"

             Symbol="ID_CMD_DRAW_LINE"

             LabelTitle="Line"

             LabelDescription="Draw line shape">
      <Command.LargeImages>
        <Image>Images/Line.bmp</Image>
      </Command.LargeImages>
    </Command>

    <Command Name="cmdButtonDrawRectangle"

             Symbol="ID_CMD_DRAW_RECTANGLE"

             LabelTitle="Rectangle"

             LabelDescription="Draw Rectangle shape">
      <Command.LargeImages>
        <Image>Images/Rectangle.bmp</Image>
      </Command.LargeImages>
    </Command>

    <Command Name="cmdButtonDrawEllipse"

             Symbol="ID_CMD_DRAW_ELLIPSE"

             LabelTitle="Ellipse"

             LabelDescription="Draw Ellipse shape">
      <Command.LargeImages>
        <Image>Images/Ellipse.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdButtonDrawCurve"

             Symbol="ID_CMD_DRAW_CURVE"
             Id='11'
             LabelTitle="Curve"

             LabelDescription="Draw Curve Shape">
      <Command.LargeImages>
        <Image>Images/Curve.bmp</Image>
      </Command.LargeImages>
    </Command>

    <Command Name="cmdTabMain"

             Symbol="ID_CMD_TAB_MAIN"

             LabelTitle="Main">
    </Command>

    <Command Name="cmdGroupShape"

              Symbol="ID_CMD_GROUP_SHAPE"

              LabelTitle="Shape">
    </Command>
    <Command Name="cmdGroupColor"

             Symbol="ID_CMD_GROUP_COLOR"

             LabelTitle="">
    </Command>
    <Command Name='cmdDropDownGallerySize'
             Symbol="ID_CMD_DROPDOWN_SIZE"
             LabelTitle='Size' >
      <Command.LargeImages>
        <Image>Images/Size.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name='cmdDropDownGalleryStyle'
             Symbol="ID_CMD_DROPDOWN_STYLE"
             LabelTitle='Style' >
      <Command.LargeImages>
        <Image>Images/Style.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name='cmdButtonColorRed' Symbol='ID_CMD_COLOR_RED'>
      <Command.LargeImages>
        <Image>Images/Red.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name='cmdButtonColorYellow' Symbol='ID_CMD_COLOR_YELLOW'>
      <Command.LargeImages>
        <Image>Images/Yellow.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name='cmdButtonColorBlack' Symbol='ID_CMD_COLOR_BLACK'>
      <Command.LargeImages>
        <Image>Images/Black.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name='cmdButtonColorBlue' Symbol='ID_CMD_COLOR_BLUE'>
      <Command.LargeImages>
        <Image>Images/Blue.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name='cmdButtonColorEditColor' Symbol='ID_CMD_COLOR_EDIT_COLOR' LabelTitle='Edit Color'>
      <Command.LargeImages>
        <Image>Images/EditColor.bmp</Image>
      </Command.LargeImages>
    </Command>

    <Command Name='cmdGroupDropDownGallerySize'
               Symbol="ID_CMD_GROUP_SIZE"
               LabelTitle='' >
    </Command>
    <Command Name='cmdGroupDropDownGalleryStyle'
               Symbol="ID_CMD_GROUP_STYLE"
               LabelTitle='' >
    </Command>
  </Application.Commands>

  <Application.Views>
    <Ribbon>
      <Ribbon.Tabs>
        
        <Tab CommandName="cmdTabMain">

          <Group CommandName="cmdGroupShape" SizeDefinition="FourButtons">
            <ToggleButton CommandName="cmdButtonDrawLine" />
            <ToggleButton CommandName="cmdButtonDrawRectangle" />
            <ToggleButton CommandName="cmdButtonDrawEllipse" />
            <ToggleButton CommandName="cmdButtonDrawCurve" />

          </Group>
          <Group CommandName="cmdGroupColor" SizeDefinition="FiveButtons">
            <ToggleButton CommandName="cmdButtonColorBlack" />
            <ToggleButton CommandName="cmdButtonColorRed" />
            <ToggleButton CommandName="cmdButtonColorYellow" />
            <ToggleButton CommandName="cmdButtonColorBlue" />
            <ToggleButton CommandName="cmdButtonColorEditColor" />
          </Group>
          <Group CommandName='cmdGroupDropDownGallerySize' SizeDefinition='OneButton'>
            <DropDownGallery CommandName='cmdDropDownGallerySize' TextPosition='Hide' Type='Items' ItemHeight='32' ItemWidth='128' HasLargeItems='true'>
              <DropDownGallery.MenuLayout>
                <FlowMenuLayout Columns='1' Rows='7' Gripper='None' />
              </DropDownGallery.MenuLayout>
            </DropDownGallery>
          </Group>

          <Group CommandName='cmdGroupDropDownGalleryStyle' SizeDefinition='OneButton'>
              <DropDownGallery CommandName='cmdDropDownGalleryStyle' TextPosition='Hide' Type='Items' ItemHeight='32' ItemWidth='128' HasLargeItems='true'>
                <DropDownGallery.MenuLayout>
                  <FlowMenuLayout Columns='1' Rows='5' Gripper='None' />
                </DropDownGallery.MenuLayout>
              </DropDownGallery>
          </Group>
          <!--<Group CommandName="cmdGroupExit" SizeDefinition="OneButton">
            <Button CommandName="cmdButtonExit" />
          </Group>-->
        </Tab>
      </Ribbon.Tabs>
      <Ribbon.ApplicationMenu>
        <ApplicationMenu>
          <MenuGroup Class="MajorItems">
            <Button CommandName='cmdButtonNew' />
            <Button CommandName='cmdButtonOpenBinary' />
            <Button CommandName='cmdButtonOpenBitmap' />
            <Button CommandName='cmdButtonSaveBinary' />
            <Button CommandName='cmdButtonSaveBitmap' />
          </MenuGroup>
          <MenuGroup Class="MajorItems">
            <Button CommandName='cmdButtonExit' />
          </MenuGroup>
        </ApplicationMenu>
      </Ribbon.ApplicationMenu>
    </Ribbon>
  </Application.Views>
</Application>